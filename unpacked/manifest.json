{
  "manifest_version": 3,

  "name": "Nihongo Search",
  "description": "This extension will help",
  "version": "1.0",
  "permissions": ["contextMenus", "storage"],
  "icons": {
    "16": "assets/icon.png",
    "64": "assets/icon.png",
    "128": "assets/icon.png"
  },
  "background": {
    "service_worker": "kanji-search.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["kanji-search-content-script.js"]
    }
  ],
  "commands": {
    "search-selected-kanji": {
      "suggested_key": "Ctrl+Shift+K",
      "description": "Search for the selected kanji"
    }
  }
}
