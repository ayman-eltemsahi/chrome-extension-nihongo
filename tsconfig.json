{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "lib": [
      "es6",
      "dom",
      "es2017"
    ],
    "target": "es2017",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "declaration": false,
    "rootDir": "./src",
    "sourceMap": false
  },
  "exclude": [
    "**/*.spec.ts",
    "node_modules"
  ]
}
